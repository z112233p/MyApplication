<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 倒三角 -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="185%"
            android:pivotY="-5%">
            <shape android:shape="rectangle">
                <size
                    android:width="50dp"
                    android:height="50dp" />
                <solid android:color="@color/colorBlack" />
            </shape>
        </rotate>
    </item>
</layer-list>