<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    android:fillViewport="true"
    android:paddingTop="15dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:layout_width="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/tv_next_step"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_upload_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="6sp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="上傳一張活動宣傳照" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_upload_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintDimensionRatio="h,345:224"
            app:layout_constraintBottom_toTopOf="@+id/v_divider_line_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_upload_photo"
            >
            <ImageView
                android:id="@+id/iv_upload_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_upload_photo"
               />
            <ImageView
                android:id="@+id/iv_upload_photo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_upload_photo"
                />
        </androidx.cardview.widget.CardView>



        <View
            android:id="@+id/v_divider_line_up"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray43"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/cv_upload_photo"/>

        <TextView
            android:id="@+id/iv_event_classify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="6sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/v_divider_line_up"
            android:text="活動分類" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_event_classify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_event_classify"/>

        <View
            android:id="@+id/v_divider_line_down"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray43"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/rv_event_classify"/>

        <LinearLayout
            android:id="@+id/ll_begin_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="35dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_end_time"
            app:layout_constraintTop_toBottomOf="@+id/v_divider_line_down"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="6sp"
                android:text="活動開始時間"/>
            <LinearLayout
                android:id="@+id/ll_choose_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/tv_event_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorTime"
                    android:lineSpacingExtra="3sp"
                    tools:text="2020-11-15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorTime"
                    android:lineSpacingExtra="3sp"
                    android:text="  -  " />
                <TextView
                    android:id="@+id/tv_event_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorTime"
                    android:lineSpacingExtra="3sp"
                    tools:text="08:00 AM" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_begin_time"
            app:layout_constraintBottom_toTopOf="@+id/ll_restriction_time"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="6sp"
                android:text="預計結束時間"/>
            <LinearLayout
                android:id="@+id/ll_choose_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/tv_event_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorTime"
                    android:lineSpacingExtra="3sp"
                    tools:text="2020-11-15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorTime"
                    android:lineSpacingExtra="3sp"
                    android:text="  -  " />
                <TextView
                    android:id="@+id/tv_event_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorTime"
                    android:lineSpacingExtra="3sp"
                    tools:text="08:00 AM" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_restriction_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_end_time"
            app:layout_constraintBottom_toTopOf="@+id/tv_next_step"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="6sp"
                android:text="報名時間截止"/>
            <LinearLayout
                android:id="@+id/ll_choose_restriction_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/tv_event_restriction_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorTime"
                    android:lineSpacingExtra="3sp"
                    tools:text="2020-11-15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorTime"
                    android:lineSpacingExtra="3sp"
                    android:text="  -  " />
                <TextView
                    android:id="@+id/tv_event_restriction_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorTime"
                    android:lineSpacingExtra="3sp"
                    tools:text="08:00 AM" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_next_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginBottom="34dp"
            android:gravity="center"
            android:background="@drawable/bg_unclickable_btn"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:lineSpacingExtra="6sp"
            android:text="下一步"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>