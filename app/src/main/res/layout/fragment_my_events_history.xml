<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    android:fillViewport="true"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <TextView
        android:id="@+id/tv_event_join"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:lineSpacingExtra="1sp"
        android:text="已報名等候審核中"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cv_event_join_count"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_event_join_count"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="9dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_event_join"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_event_join_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:text="2"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_divider_line_zero"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorGray70"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_join"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_events_join"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_divider_line_zero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_event_going"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:lineSpacingExtra="1sp"
        android:text="正在進行中"
        app:layout_constraintTop_toBottomOf="@+id/rv_events_join"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cv_event_going_count"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_event_going_count"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="9dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/rv_events_join"
        app:layout_constraintStart_toEndOf="@+id/tv_event_going"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_event_going_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:text="2"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_divider_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorGray70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_going"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_events_going"
        android:layout_width="0dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_divider_line"/>

    <TextView
        android:id="@+id/tv_event_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:lineSpacingExtra="1sp"
        android:text="歷史紀錄"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cv_event_history_count"
        app:layout_constraintTop_toBottomOf="@+id/rv_events_going"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_event_history_count"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="9dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/rv_events_going"
        app:layout_constraintStart_toEndOf="@+id/tv_event_history"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_event_history_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:text="2"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_divider_line_two"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorGray70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_history"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_events_history"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_divider_line_two"/>


    <LinearLayout
        android:id="@+id/ll_no_event"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:elevation="2dp"
        android:background="@color/colorMainBackground"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/no_event"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
