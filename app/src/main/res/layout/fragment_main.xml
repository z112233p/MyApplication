<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorMainBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_choose_country"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/ic_choose_map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fl_banner"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_chose_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_choose_country"
            app:layout_constraintBottom_toTopOf="@+id/fl_banner"
            android:text="Taipei "/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fl_banner"
            android:src="@mipmap/ic_create_event"/>

        <FrameLayout
            android:id="@+id/fl_banner"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_choose_country">

            <com.example.myapplication.viewpager.BannerViewPager
                android:id="@+id/vp_banner_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/ll_dot_layout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:orientation="horizontal"/>
        </FrameLayout>

        <com.example.myapplication.custom_view.HorizontalItemLayout
            android:id="@+id/ll_hot_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/fl_banner"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="14dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_hot_events"/>

        <com.example.myapplication.custom_view.HorizontalItemLayout
            android:id="@+id/ll_coming_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/rv_event_type"/>

        <com.example.myapplication.custom_view.HorizontalItemLayout
            android:id="@+id/ll_may_like_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_coming_events"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
