<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.myapplication.custom_view.SquareImageView
            android:id="@+id/iv_event_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_add_attachment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_event_photo"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="標題："
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_title"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="內容："
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_event_restriction_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_description"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/tv_event_restriction_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="截止日期："
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_event_restriction_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_choose_event_restriction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇日期"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_event_restriction_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_restriction_date"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/tv_event_restriction_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="截止時間："
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_event_restriction_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:singleLine="true"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btn_choose_event_restriction_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇時間"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_event_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_restriction_time"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/tv_event_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="開始日期："
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_event_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:singleLine="true"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_choose_event_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇日期"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_event_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_start_date"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/tv_event_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="開始時間："
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_event_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:singleLine="true"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btn_choose_event_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇時間"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_event_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_start_time"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/tv_event_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="結束日期："
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_event_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btn_choose_event_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇日期"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_event_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_end_date"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/tv_event_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="結束時間："
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_event_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btn_choose_event_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇時間"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_event_spinners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_end_time"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="類型："/>
                <Spinner
                    android:id="@+id/sp_event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="消費模式："/>
                <Spinner
                    android:id="@+id/sp_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="幣種："/>
                <Spinner
                    android:id="@+id/sp_currency_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_event_restriction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_spinners"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="人數："/>
            <EditText
                android:id="@+id/ed_event_users_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="phone"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="預算："/>
            <EditText
                android:id="@+id/ed_event_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="datetime"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_restriction"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/tv_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地點："
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_event_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_goto_map_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地圖"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="確定"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_event_location"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>