<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gray2b_radius5"
    android:foreground="@drawable/ripple_gray_color"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingStart="11dp"
    android:paddingEnd="11dp"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:lineSpacingExtra="3sp"
        android:paddingStart="2dp"
        android:gravity="end"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_divider_line"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="08 / 27 / 2020"/>

    <TextView
        android:id="@+id/tv_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/colorYellowD1"
        android:lineSpacingExtra="6sp"
        android:paddingStart="2dp"
        android:paddingTop="7dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_divider_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_time"
        tools:text="啡嚐開心"/>

    <ImageView
        android:id="@+id/iv_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_event_detail_location"
        android:paddingTop="5dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_divider_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_title"/>

    <TextView
        android:id="@+id/tv_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:lineSpacingExtra="3sp"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/iv_event_location"
        app:layout_constraintEnd_toStartOf="@+id/v_divider_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_title"
        tools:text="Happy Coffee S…"/>

    <View
        android:id="@+id/v_divider_line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/colorGray96959b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_owner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/v_divider_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_owner"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/iv_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@mipmap/ic_create_event"
            tools:ignore="Conten
                    tDescription" />
        <ImageView
            android:id="@+id/iv_event_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:alpha="0.9"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/iv_owner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_event_detail_location"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:lineSpacingExtra="3sp"
        app:layout_constraintStart_toEndOf="@+id/v_divider_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_owner"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Geoffrey" />

    <TextView
        android:id="@+id/tv_event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:singleLine="true"
        android:textColor="@color/colorGrayA8"
        android:textSize="11sp"
        android:text="@string/event_description"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toEndOf="@+id/v_divider_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_owner"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_event_member_one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/colorMainBackground"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                app:cardCornerRadius="13dp">

                <ImageView
                    android:id="@+id/iv_event_member_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ph_hong_kong"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_event_member_two"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            app:cardBackgroundColor="@color/colorMainBackground"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                app:cardCornerRadius="13dp">

                <ImageView
                    android:id="@+id/iv_event_member_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ph_hong_kong"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_event_member_three"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="36dp"
            app:cardBackgroundColor="@color/colorMainBackground"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                app:cardCornerRadius="13dp">

                <ImageView
                    android:id="@+id/iv_event_member_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ph_kaohsiung"/>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_event_member_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="80dp"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="2sp"
            tools:text="+12 Going"
            tools:ignore="SmallSp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>