<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_gravity="top"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_owner"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="11dp"
        card_view:cardCornerRadius="21dp"
        android:layout_marginTop="5dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toEndOf="@+id/linearLayout"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_goneMarginEnd="10dp">

        <ImageView
            android:id="@+id/messageUserAvatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tool:ignore="ContentDescription"
            tool:src="@drawable/ic_add_attachment" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_marginEnd="10dp"
        card_view:layout_constraintHorizontal_bias="1"
        card_view:layout_constraintHorizontal_chainStyle="packed"
        card_view:layout_constrainedWidth="true"
        card_view:layout_constraintStart_toEndOf="@+id/messageTime"
        card_view:layout_constraintEnd_toStartOf="@+id/card_owner"
        android:orientation="horizontal"
        tool:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:visibility="invisible"
                android:textSize="10sp"
                android:text="Peter"
                tool:ignore="SmallSp" />
            <LinearLayout
                android:id="@+id/ll_message_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_outcoming_msg_bubble">
                <LinearLayout
                    android:id="@+id/ll_message_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:padding="10dp"
                    android:visibility="gone"
                    tool:visibility="visible"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_reply_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_send"
                        tool:visibility="visible"
                        android:visibility="gone"
                        tool:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/tv_reply_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/transparent"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tool:visibility="visible"
                        tool:text="re"/>

                </LinearLayout>
                <View
                    android:id="@+id/v_divider_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/messageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/transparent"
                    android:textColor="@color/colorWhite"
                    tool:text="Hi! "/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/transparent"
                    card_view:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@id/image"
                        android:background="@color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:transitionName="example_transition"
                        android:adjustViewBounds="true"/>
                </androidx.cardview.widget.CardView>

                <com.example.myapplication.custom_view.AudioPlayerLayout
                    android:id="@+id/ll_audio_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/linearLayout"
            card_view:layout_constraintStart_toStartOf="parent"
            tool:ignore="SmallSp"
            tool:text="12345" />

    <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="5dp"
        android:background="@color/transparent"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@+id/linearLayout"
        card_view:layout_constraintHorizontal_bias="1.0"
        card_view:layout_constraintHorizontal_chainStyle="packed"
        card_view:layout_constraintStart_toStartOf="parent"
        tool:ignore="SmallSp"
        tool:text="12345" />


</androidx.constraintlayout.widget.ConstraintLayout>