<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >


<androidx.cardview.widget.CardView
    android:id="@+id/cv_event"
    android:foreground="@drawable/ripple_gray_color"
    android:background="@color/transparent"
    app:layout_constraintDimensionRatio="h,345:224"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/ll_event_information"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_create_event"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>


    <TextView
        android:id="@+id/tv_event_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="@string/event_title"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp" />

    <ImageView
        android:id="@+id/iv_event_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.9"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="13dp">
            <ImageView
                android:id="@+id/iv_owner"
                android:foreground="@drawable/ripple_main_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingStart="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="11sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/ll_event_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_event"
        android:orientation="vertical"
        android:background="@color/transparent"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textSize="11sp"
            android:text="@string/event_time"/>

        <TextView
            android:id="@+id/tv_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="gone"
            android:text="@string/event_location"
            android:textColor="@color/colorWhite"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textSize="11sp"
            android:text="@string/event_title"/>

        <TextView
            android:id="@+id/tv_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/colorGrayA8"
            android:textSize="11sp"
            android:text="@string/event_description"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_event_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_event_full"/>
</androidx.constraintlayout.widget.ConstraintLayout>


