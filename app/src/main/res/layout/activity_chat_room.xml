<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.example.myapplication.custom_view.ContextMenuRecyclerView
            android:id="@+id/messagesList"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            app:textAutoLink="all"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_click_to_bottom"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_start_record"
        android:text="START"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/btn_stop_record"
        android:text="STOP"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/btn_play_record"
        android:text="PLAY"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <LinearLayout
        android:id="@+id/ll_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        tools:visibility="visible">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_owner"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="visible"
                    app:cardCornerRadius="21dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/img_owner"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        tools:src="@drawable/ic_send"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_reply_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        tools:text="reply name"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_reply_image2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_send"/>

                        <TextView
                            android:id="@+id/tv_reply_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:text="reply content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_send"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp" />
        </FrameLayout>


    </LinearLayout>

    <com.stfalcon.chatkit.messages.MessageInput
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showAttachmentButton="true"
        app:inputButtonHeight="30dp"
        app:inputButtonMargin="16dp"
        app:inputButtonWidth="30dp"
        app:inputMaxLines="3"
        app:inputTextColor="@color/black"
        app:inputTextSize="18sp"/>

</LinearLayout>