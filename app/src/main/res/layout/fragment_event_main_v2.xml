<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    android:fillViewport="true"
    android:paddingTop="30dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_event_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_event_detail_time"/>

            <TextView
                android:id="@+id/tv_event_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="3sp"
                tools:text="12 / 01 / 2020 (Tue) 11:00pm - 6:00am" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_event_detail_location"/>

            <TextView
                android:id="@+id/tv_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="3sp"
                tools:text="W Hotel"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_location_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/ll_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@mipmap/ic_event_name"/>

            <TextView
                android:id="@+id/tv_location_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/colorGrayB4"
                android:lineSpacingExtra="3sp"
                tools:text="NO.10, SEC. 5, ZHONGXIAO E. RD.,TAIPEI, TAIWAN 110" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_participant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_location_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorGray70"
            app:layout_constraintTop_toBottomOf="@+id/ll_participant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="-1sp"
            android:layout_marginTop="30dp"
            tools:text="DO NOT SLEEP AT MIDNIGHT AND CREATE THE CRAZY NIGHT."
            app:layout_constraintTop_toBottomOf="@+id/tv_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_event_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintDimensionRatio="h,345:224"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_title">
            <ImageView
                android:id="@+id/iv_event_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_upload_photo" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_event_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_event_photo">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_event_detail_cost"/>
            <TextView
                android:id="@+id/tv_event_budget"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="2sp"
                tools:text="10000" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_event_detail_joins"/>
            <TextView
                android:id="@+id/tv_event_users_limit"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="2sp"
                tools:text="10000" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/colorWhite"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:src="@mipmap/ic_black_chocolate"/>
            <TextView
                android:id="@+id/tv_event_reward"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:visibility="gone"

                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="2sp"
                tools:text="10000" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_event_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="2sp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="60dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_event_info"
            tools:text="Do Not Sleep has long been a bastion of quality
underground music and this season the crew will
return once again with Amnesia Presents to take
over our club for 6 parties with some very special
guests.
6 exclusive events full of surprises that, with no
doubt, will represent the essence of Amnesia
and Ibiza. Amnesia Presents x Do Not Sleep will
take over our club on the 12/01/2020 (Tuesday)
11:00pm - 6:00amits unique underground house
and techno brand that surprised us all last year.

Going into their 6th season in Ibiza and globally
around the world, the notorious party starters will
come armed with what they are best known for…
All shades of house and techno.
Get ready to enjoy the best house and techno
and expect some usual suspects as well as
some exciting newcomers on board!"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>