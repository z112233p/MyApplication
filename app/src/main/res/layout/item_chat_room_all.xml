<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_chat_room_photo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_oval_frame_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_chat_room_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp">
        <ImageView
            android:id="@+id/iv_chat_room_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_chat_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/colorWhiteF8"
        android:textSize="12sp"
        android:singleLine="true"
        android:text="0000000"
        app:layout_constraintTop_toBottomOf="@+id/ll_chat_room_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>